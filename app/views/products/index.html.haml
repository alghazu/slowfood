= render 'static_pages/navbar'
%h1 Eats Slow Food
%p
  Kungsgatan 10, 132 20 Stockholm

= shop_icon_quantity

%table
  %tr
    %th Item
    %th Price
    %th
    %th

  -@products.each do |product|
    %tr
      %td= link_to product.name, product_path(product)
      %td= product.price
      %td= link_to 'Edit', edit_product_path(product)
      %td= link_to 'Delete', product_path(product),
                            method: :delete,
                            data: {confirm: 'Are you sure?'}
      %td= link_to add_to_cart(product, 1, 'Add to Cart')
= render 'static_pages/footer'
